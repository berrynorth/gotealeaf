<%= render 'shared/errors', object: @user %>

<div class='well'>
  <%= form_for @user do |f| %>
    <div class='control-group'>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class='control-group'>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class='control-group'>
      <%= f.label :time_zone %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %>
    </div>
    <div class='control-group'>
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: @user.new_record? ? '' : 'New password' %>
      <%= f.label :password_confirmation, 'Confirmation' %>
      <%= f.password_field :password_confirmation, placeholder: @user.new_record? ? '' : 'Confirm new password' %>
    </div>
    <%= f.submit @user.new_record? ? 'Register' : 'Update', class: 'btn btn-primary' %>
  <% end %>
</div>