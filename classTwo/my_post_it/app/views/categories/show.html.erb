<% content_for :head do %>
  <title>Postit! &raquo <%= @category.name %></title>
<% end %>

<% header = link_to('All Posts', posts_path) + " &raquo #{@category.name}".html_safe %>

<%= render 'shared/content_title', title: header %>

<% @category.posts.all.sort_by {|p| p.total_votes}.reverse.each do |post| %>
  <%= render 'posts/post', post: post %>
<% end %>